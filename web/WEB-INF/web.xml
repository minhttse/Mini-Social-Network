<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>minhtt.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>minhtt.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>minhtt.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUserController</servlet-name>
        <servlet-class>minhtt.controllers.CreateUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListArticleController</servlet-name>
        <servlet-class>minhtt.controllers.ListArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleDetailController</servlet-name>
        <servlet-class>minhtt.controllers.ArticleDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCommentController</servlet-name>
        <servlet-class>minhtt.controllers.PostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostNewArticleController</servlet-name>
        <servlet-class>minhtt.controllers.PostNewArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentController</servlet-name>
        <servlet-class>minhtt.controllers.DeleteCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticleController</servlet-name>
        <servlet-class>minhtt.controllers.DeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUserController</servlet-name>
        <servlet-class>minhtt.controllers.VerifyUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyUserAgainController</servlet-name>
        <servlet-class>minhtt.controllers.VerifyUserAgainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUserController</servlet-name>
        <url-pattern>/CreateUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListArticleController</servlet-name>
        <url-pattern>/ListArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleDetailController</servlet-name>
        <url-pattern>/ArticleDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCommentController</servlet-name>
        <url-pattern>/PostCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostNewArticleController</servlet-name>
        <url-pattern>/PostNewArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommentController</servlet-name>
        <url-pattern>/DeleteCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticleController</servlet-name>
        <url-pattern>/DeleteArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUserController</servlet-name>
        <url-pattern>/VerifyUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyUserAgainController</servlet-name>
        <url-pattern>/VerifyUserAgainController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
</web-app>
